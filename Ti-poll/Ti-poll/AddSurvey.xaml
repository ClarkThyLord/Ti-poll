        xmlns:local="clr-namespace:Ti_poll"
        mc:Ignorable="d"
        Title="AddSurvey" Height="450" Width="800" Closing="Window_Closing" WindowStartupLocation="CenterScreen" MinHeight="450" MinWidth="800" Icon="Assets/Ti-poll.png">
