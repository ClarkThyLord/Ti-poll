<Window x:Class="Ti_poll.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ti_poll"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="201" Margin="138,105,0,0" VerticalAlignment="Top" Width="514" Background="White"/>
        <Button x:Name="Add_Survey" Content="+" HorizontalAlignment="Left" Height="62" Margin="361,311,0,0" VerticalAlignment="Top" Width="73" FontSize="48"/>
        <Grid HorizontalAlignment="Left" Height="73" VerticalAlignment="Top" Width="793" Background="#FF173299">
            <TextBox x:Name="searchbar" HorizontalAlignment="Left" Height="26" Margin="555,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211"/>
            <ComboBox HorizontalAlignment="Left" Margin="394,30,0,0" VerticalAlignment="Top" Width="120" BorderBrush="White" SelectedIndex="0">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFE5E5E5" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
                <ComboBoxItem Content="Search by:"/>
                <ComboBoxItem Content="Title"/>
                <ComboBoxItem Content="Code"/>
            </ComboBox>
        </Grid>
        <Button x:Name="profile_button" Content="Profile" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="73" Background="#FF173299" BorderBrush="#FF173299" Foreground="White" FontSize="24"/>
        <Button x:Name="points_button" Content="Points:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="73" Margin="90,0,0,0" Background="#FF173299" BorderBrush="#FF173299" FontSize="24" Foreground="White"/>
        <Button x:Name="store_button" Content="Store" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="73" Margin="241,0,0,0" Background="#FF173299" BorderBrush="#FF173299" Foreground="White" FontSize="24"/>

    </Grid>
</Window>
