<Window x:Class="Ti_poll.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ti_poll"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800" Closing="Window_Closing" WindowStartupLocation="CenterScreen" MinHeight="450" MinWidth="800" Icon="Assets/Ti-poll.png">
    <Grid>
        <StackPanel Height="201" Margin="138,105,141.333,0" VerticalAlignment="Top" Background="White"/>
        <Button x:Name="Add_Survey" Content="+" Margin="361,311,359.333,0" FontSize="48" Height="62" VerticalAlignment="Top" Click="Add_Survey_Click"/>
        <Grid Height="73" VerticalAlignment="Top" Background="#FF173299" Margin="0,0,0.333,0">
            <TextBox x:Name="searchbar" HorizontalAlignment="Right" Margin="0,30,27,17" TextWrapping="Wrap" Width="211" KeyDown="searchbar_KeyDown"/>
            <ComboBox HorizontalAlignment="Right" Margin="0,31,279,21" Width="120" BorderBrush="White" SelectedIndex="0">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFE5E5E5" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
                <ComboBoxItem Content="Search by:" IsEnabled="False" IsSelected="True"/>
                <ComboBoxItem Content="Title"/>
                <ComboBoxItem Content="Code"/>
            </ComboBox>
        </Grid>
        <Button x:Name="profile_button" Content="Profile" Background="#FF173299" BorderBrush="#FF173299" Foreground="White" FontSize="24" HorizontalAlignment="Left" Width="90" Height="73" VerticalAlignment="Top" Click="profile_button_Click"/>
        <Button x:Name="points_button" Content="Points:" Margin="90,0,0,0" Background="#FF173299" BorderBrush="#FF173299" FontSize="24" Foreground="White" HorizontalAlignment="Left" Width="90" Height="73" VerticalAlignment="Top" Click="points_button_Click"/>

    </Grid>
</Window>
